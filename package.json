    "format:check": "prettier --check \"**/*.{js,html,css,json,md}\"",
    "test": "node tests/critical-flows.test.js",
    "lint:core": "eslint checklist.js gestao_oficina.js gestao_oficina_firebase.js core_utils.js"
  },
  "keywords": [
    "checklist",
